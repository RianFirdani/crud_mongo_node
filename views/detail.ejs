<div class="container mt-3">
    <div class="row">
        <div class="col md-8">
            <h2>Detail Contact</h2>
            <% if (!contact) { %>
                <div class="alert alert-danger" role="alert">
                    Tidak ada kontak dengan nama yang anda cari Silahkan <a href="/contact" class="alert-link">&laquo;Kembali Ke daftar Contact</a>. Terima kasih
                  </div>
            <% }else { %>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title"><%= contact.name %> </h5>
                  <h6 class="card-subtitle mb-2 text-body-secondary"><%= contact.phone %> </h6>
                  <p class="card-text"><%= contact.email %></p>
                  <a href="/contact" class="card-link d-block mt-3">&laquo; Kembali</a>
                </div>
              </div>
        </div>
    </div>
    <% } %>
</div>